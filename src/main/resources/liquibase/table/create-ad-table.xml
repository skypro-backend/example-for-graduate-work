<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="1-base" author="rempll">

        <preConditions>
            <not>
                <tableExists tableName="ads"/>
            </not>
        </preConditions>

        <createTable tableName="ads">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="image_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)"/>
            <column name="user_id" type="INT"/>

        </createTable>
        <addForeignKeyConstraint constraintName="FK_AD_TO_USERS_ID"
                                 baseColumnNames="user_id"
                                 baseTableName="ads"
                                 referencedColumnNames="id"
                                 referencedTableName="users"
                                 onDelete="CASCADE"/>
        <addForeignKeyConstraint constraintName="FK_AD_TO_IMAGE_ID"
                                 baseColumnNames="image_id"
                                 baseTableName="ads"
                                 referencedColumnNames="id"
                                 referencedTableName="images"/>
    </changeSet>
</databaseChangeLog>